<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6EEF4"
    tools:context=".FacilitiesSettingMenu">

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="46dp"
        android:layout_height="49dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="38dp"
        android:layout_marginRight="7dp"
        android:background="@drawable/back_button"
        />

    <TextView
        android:id="@+id/facilities_Menu"
        android:layout_width="215dp"
        android:layout_height="39dp"
        android:layout_marginBottom="30dp"
        android:text="Facilities Setting"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_toRightOf="@id/btnBack"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="20dp"/>

    <Button
        android:id="@+id/btnFacility"
        android:layout_width="266dp"
        android:layout_height="80dp"
        android:background="@drawable/light_blue_btn"
        android:fontFamily="@font/alata"
        android:text="ADD FACILITY"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="16sp"
        app:iconTint="#EC9595"
        android:layout_marginTop="30dp"
        android:layout_below="@id/facilities_Menu"
        app:rippleColor="#EC9595" />

    <Button
        android:id="@+id/btnEditFacility"
        android:layout_width="266dp"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/light_blue_btn"
        android:fontFamily="@font/alata"
        android:text="EDIT FACILITY"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="16sp"
        app:iconTint="#EC9595"
        android:layout_below="@id/btnFacility"
        android:layout_centerHorizontal="true"
        app:rippleColor="#EC9595" />

    <Button
        android:id="@+id/btnMaintenance"
        android:layout_width="266dp"
        android:layout_height="80dp"
        android:background="@drawable/light_blue_btn"
        android:fontFamily="@font/alata"
        android:text="FACILITIES MAINTENANCE"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="16sp"
        app:iconTint="#EC9595"
        android:layout_below="@id/btnEditFacility"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        app:rippleColor="#EC9595" />

    <Button
        android:id="@+id/btnFacilitiesReport"
        android:layout_width="266dp"
        android:layout_height="80dp"
        android:background="@drawable/light_blue_btn"
        android:fontFamily="@font/alata"
        android:padding="10dp"
        android:text="FACILITIES BOOKING REPORT"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="16sp"
        app:iconTint="#EC9595"
        android:layout_below="@id/btnMaintenance"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        app:rippleColor="#EC9595" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="412dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="-1dp"
        android:layout_marginBottom="1dp"
        android:scaleType="fitEnd"
        app:srcCompat="@drawable/building"
        tools:ignore="MissingConstraints" />



</RelativeLayout>
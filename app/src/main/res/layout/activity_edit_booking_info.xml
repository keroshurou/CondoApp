<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6EEF4"
    tools:context=".Edit_booking_info">

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="46dp"
        android:layout_height="49dp"
        android:layout_marginTop="38dp"
        android:layout_marginStart="15dp"
        android:layout_marginRight="7dp"
        android:background="@drawable/back_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.079"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/editBooking"
        android:layout_width="236dp"
        android:layout_height="47dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="41dp"
        android:layout_marginEnd="34dp"
        android:layout_toRightOf="@id/btnBack"
        android:paddingTop="5dp"
        android:text="Edit Booking"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.322"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.066" />

    <TextView
        android:id="@+id/txtBookingID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editBooking"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="164dp"
        android:enabled="false"
        android:text="Booking ID"
        android:textColor="#050505"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="58dp"
        tools:layout_editor_absoluteY="130dp" />

    <EditText
        android:id="@+id/editTxtBID"
        android:layout_width="300dp"
        android:layout_height="38dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:enabled="false"
        android:background="@drawable/white_column"
        android:layout_below="@id/txtBookingID"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:elevation="10dp"
        android:ems="10"
        android:hint="Booking ID"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="59dp"
        tools:layout_editor_absoluteY="166dp" />

    <TextView
        android:id="@+id/txtFacility"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTxtBID"
        android:layout_alignParentStart="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="12dp"
        android:text="Facilty "
        android:textColor="#050505"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/editBooking" />

    <Spinner
        android:id="@+id/spinnerFacility"
        android:layout_width="300dp"
        android:layout_height="38dp"
        android:layout_centerVertical="true"
        android:background="@drawable/spinner_style"
        android:gravity="center"
        android:spinnerMode="dropdown"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_below="@id/txtFacility"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:elevation="10dp"
        />

    <TextView
        android:id="@+id/txtBookingTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinnerFacility"
        android:layout_alignParentStart="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="12dp"
        android:text="Time"
        android:textColor="#050505"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.128"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Spinner
        android:id="@+id/spinnerTime"
        android:layout_width="300dp"
        android:layout_height="38dp"
        android:layout_centerVertical="true"
        android:background="@drawable/spinner_style"
        android:gravity="center"
        android:spinnerMode="dropdown"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        android:entries="@array/str2"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:elevation="10dp"
        android:layout_below="@id/txtBookingTime"/>


    <TextView
        android:id="@+id/txtDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinnerTime"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="12dp"
        android:text="Date"
        android:textColor="#050505"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.153"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editTxtDate"
        android:layout_width="300dp"
        android:layout_height="38dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/white_column"
        android:layout_below="@id/txtDate"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:elevation="10dp"
        android:ems="10"
        android:hint="Enter booking date"
        android:inputType="date"
        android:padding="10dp"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="59dp"
        tools:layout_editor_absoluteY="166dp" />


    <Button
        android:id="@+id/btnUpdate"
        android:layout_width="136dp"
        android:layout_height="48dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="97dp"
        android:background="@drawable/black_btn"
        android:layout_below="@id/editTxtDate"
        android:text="Update"
        android:textColor="#F2F6F6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        android:onClick="fnUpdateBooking"
        android:layout_centerHorizontal="true"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-3dp"
        android:layout_marginEnd="-1dp"
        android:layout_marginBottom="4dp"
        android:scaleType="fitEnd"
        app:srcCompat="@drawable/building" />
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    android:gravity="center"
    tools:context=".RegistrationCompletdActivity">

    <TextView
        android:layout_marginBottom="20dp"
        android:id="@+id/welcome_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Thank you!"
        android:textColor="@color/black"
        android:textSize="23dp"
        android:textStyle="bold"
        android:fontFamily="sans-serif"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/card_comp"
        app:cardElevation="8dp"
        app:cardCornerRadius="9dp"
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/welcome_txt">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/img_man"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_below="@+id/txt_layout"
                android:layout_centerHorizontal="true"
                android:src="@drawable/completed" />
            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"
                android:id="@+id/comp_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Registration Completed!"
                android:textColor="@color/black"
                android:textSize="23dp"
                android:textStyle="bold"
                android:fontFamily="sans-serif"/>
        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/for_login_btn"
        android:layout_width="233dp"
        android:layout_height="58dp"
        android:layout_below="@+id/card_comp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/black"
        android:padding="10dp"
        android:text="Sign In Now"
        android:fontFamily="sans-serif"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:cornerRadius="15dp" />
</RelativeLayout>